{% import "_includes/forms" as forms %}

{{ forms.selectField({
    label: "Type"|t('app'),
    id: 'cookieconsent-type',
    name: 'type',
    value: settings.type,
    required: true,
    errors: settings.getErrors('type'),
    options: {
        'info': "Info"|t('app'),
        'opt-in': "Opt in"|t('app'),
        'opt-out': "Opt out"|t('app'),
    }
}) }}

<strong>{{ "Whitelist or blacklist"|t('app') }}</strong>
<p>{{ "Add a list of script sources that should be blocked initially. Whitelist blocks all scripts not included in the list. Blacklist blocks all scripts included in the list." }}</p>
<div class="field">
    <label>
        {{ forms.radio({
            name: 'whiteorblacklist',
            value: 1,
            checked: settings.whiteorblacklist == 1,
        }) }}

        {{ "White list"|t('app') }}
    </label>

    {{ forms.textarea({
        name: 'whitelist',
        value: settings.whitelist,
        placeholder: craft.app.sites.currentSite.baseUrl|replace('/(https*\:\\/\\/)/', '')|replace('/', ''),
        rows: 5
    }) }}
</div>

<div class="field">
    <label>
        {{ forms.radio({
            name: 'whiteorblacklist',
            value: 2,
            checked: settings.whiteorblacklist == 2,
        }) }}

        {{ "Black list"|t('app') }}
    </label>

    {{ forms.textarea({
        name: 'blacklist',
        value: settings.blacklist,
        placeholder: 'www.google-analytics.com \npiwik.php \ncdn.mxpnl.com',
        rows: 5
    }) }}
</div>
